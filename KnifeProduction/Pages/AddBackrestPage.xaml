<Page x:Class="KnifeProduction.Pages.AddBackrestPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:KnifeProduction.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddBackrestPage">

    <StackPanel Orientation="Vertical">

        <Image x:Name="imgScreen" Width="200" Height="200">
        </Image>
        <TextBox x:Name="txtName"/>
        <Button x:Name="btnAdd" Click="btnAdd_Click"/>
        <Button x:Name="btnGett" Click="btnGett_Click"/>
        <Image x:Name="imgGett"  Source="{Binding Image}" RenderOptions.BitmapScalingMode="HighQuality" Width="200" Height="200"/>
    </StackPanel>
</Page>
